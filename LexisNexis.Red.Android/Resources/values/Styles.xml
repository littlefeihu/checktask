<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Inherit from the light Material Theme -->
  <!--<style name="MyCustomTheme" parent="Theme.AppCompat.Light">-->
  <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowTranslucentStatus">true</item>

    <item name="android:windowBackground">#E40E13</item>

    <item name="android:windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="android:windowActionBar">false</item>

    <!-- toolbar（actionbar）颜色 -->
    <item name="colorPrimary">@color/MainAppThemeColorPrimary</item>
    <!-- 状态栏颜色 -->
    <item name="colorPrimaryDark">@color/StatusBarBackground</item>
    <!-- 窗口的背景颜色 -->
    <item name="android:windowBackground">@android:color/white</item>

    <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
    <item name="android:fastScrollOverlayPosition">atThumb</item>
    <!-- <item name="android:fastScrollOverlayPosition">floating</item> -->
    <item name="android:fastScrollTextColor">#ffffff</item>
    <item name="android:fastScrollPreviewBackgroundRight">@drawable/fastscroll_thumb_indicator</item>

    <item name="windowActionModeOverlay">true</item>
    <item name="android:textSelectHandleLeft">@drawable/webview_textselection_left</item>
	<item name="android:textSelectHandleRight">@drawable/webview_textselection_right</item>
  </style>

  <style name="LoginPage" parent="Theme.AppCompat.Light.NoActionBar">
  	<item name="android:windowTranslucentStatus">true</item>
  </style>

  <style name="ToolBarStyle" parent="">
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>

  <style name="LoginPage_EditView">
    <item name="android:textColorHint">#89ffffff</item>
  	<item name="android:background">@drawable/login_edit_text</item>
  	<item name="android:textColor">@android:color/white</item>
  	<item name="android:textCursorDrawable">@null</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:textSize">16sp</item>
  </style>

  <style name="LoginPage_TextView">
  	<item name="android:textColor">@android:color/white</item>
  	<item name="android:layout_width">100dp</item>
  	<item name="android:layout_height">wrap_content</item>
  	<item name="android:gravity">right</item>
  	<item name="android:paddingRight">10dp</item>
  </style>

  <style name="LoginPage_Spinner">
  	<item name="android:background">@drawable/spinner_bg</item>
  	<item name="android:textColor">#ffffff</item>
  	<item name="android:layout_height">wrap_content</item>
  </style>

  <style name="LoginPage_Button">
  	<item name="android:layout_width">120dp</item>
  	<item name="android:layout_height">25dp</item>
  	<item name="android:textSize">6pt</item>
  	<item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Pub_Detail_Info_Left_Text">
  	<item name="android:layout_width">93dp</item>
  	<item name="android:gravity">right</item>
  	<item name="android:textColor">#70000000</item>
  </style>
  <style name="Pub_Detail_Info_Right_Text">
  	<item name="android:layout_marginLeft">10dp</item>
  	<item name="android:textColor">@android:color/black</item>
  </style>

  <style name="MainMenuPopUp_TextView_Padding">
  	<item name="android:paddingLeft">15dp</item>
  	<item name="android:paddingTop">8dp</item>
  	<item name="android:paddingBottom">8dp</item>
  	<item name="android:paddingRight">20dp</item>
  </style>

  <style name="MainMenuPopUp_TextView" parent="MainMenuPopUp_TextView_Padding">
  	<item name="android:textColor">#DE000000</item>
  	<item name="android:textSize">14sp</item>
  	<item name="android:fontFamily">@string/FontFamily_Roboto_Regular</item>
  </style>

  <style name="NumPad_Button">
  	<item name="android:layout_width">0dp</item>
  	<item name="android:layout_height">match_parent</item>
  	<item name="android:textSize">16sp</item>
  	<item name="android:layout_weight">1</item>
  	<item name="android:gravity">center</item>
  	<item name="android:background">@drawable/btn_numberpad_number</item>
  	<item name="android:layout_margin">3dp</item>
  	<item name="android:textColor">#000000</item>
  </style>
</resources>